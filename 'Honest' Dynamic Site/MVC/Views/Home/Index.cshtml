   <form asp-controller="Home" asp-action="FileUpload" enctype="multipart/form-data" method="post">    
        <input type="file" name="file" value="" class="" onchange='this.form.submit(); QueryIn();'>
  </form>
  </div>
       
  <div class="text-center" id="queryButtonUploadSimple">
