@model Honest.Models.UserDoc
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Honest Plagiarism Detector</h1>
    <p></p>
</div>
    

<form asp-controller="Home" asp-action="Results">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group" id ="queryBox">
        <textarea asp-for="userDocText" class="form-control" id="query" /></textarea>
        <span asp-validation-for="userDocText" class="text-danger"></span>
    </div>

    

    <div class="center">
        <input type="submit" value="Scan Text" class="btn btn-primary" id="queryButton" onclick="QueryIn()"/>   
    </div>



   </form>


